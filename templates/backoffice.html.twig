<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}OnlyMoviesBackoffice | {% endblock %}</title>
    {% block stylesheets %}

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.0.1/lux/bootstrap.min.css" integrity="sha512-EJJuqC8nbI+dUjDM89eZ8dVmckG/vAfKIhmW4pi3Y/S1gE8uvIHuPqpbZ3/DliUQOZbS0Wp7317zoPRRoX+E+A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>


    {% endblock %}
</head>
<body>
<div style="background-color: #999999;min-height: 100vh;" class="row justify-content-around p-2">
    <div class="col-md-2 bg-white m-1">
        <ul class="nav flex-column">
            <li class="nav-item ms-5 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active"><i class="fas fa-user fa-2x"></i></a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="#">Profil</a>
                            <a class="dropdown-item" href="{{ path('home') }}">Accès Front</a>
                            <hr>
                            <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des films</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('listMovies') }}">Liste des films</a>
                            <a class="dropdown-item" href="{{ path('addMovies') }}">Ajouter un film</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des catégories</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('addCategories') }}">Liste catégories</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des acteurs</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('actors') }}">Liste des acteurs</a>

                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des forfaits</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('listPricing') }}">Liste des forfaits</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="{{ path('listUsers') }}" class="btn btn-primary nav-link active">Gestion des utilisateur</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="#">Dropdown link</a>
                            <a class="dropdown-item" href="#">Dropdown link</a>
                        </div>
                    </div>
                </div>
            </li>

        </ul>
    </div>
    <div class="col-md-9 bg-white m-1">

        <div class="row justify-content-center mt-4 mb-4">
            <div class="col text-center"><h1>{% block titre %}{% endblock %}</h1></div>
        </div>
        {% block body %}

        {% endblock %}
    </div>
</div>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
