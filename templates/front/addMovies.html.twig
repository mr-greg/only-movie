{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }}Ajout film
{% endblock %}

{% block h1 %}
    Ajout film
{% endblock %}



{% block body %}
<link rel="stylesheet" href="{{ asset('css/select2.css') }}">

{% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger text-center">
            {{ message }}
        </div>
{% endfor %}
    {{ form_start(form) }}

    <label for="">Titre</label>
    {{ form_row(form.title) }}

    <label for="">RÃ©alisateur</label>
    {{ form_row(form.director) }}

    <label for="">Synopsis</label>
    {{ form_row(form.resume) }}

    <label for="">Categorie</label>
    {{ form_row(form.categories) }}

    <label for="">Acteurs</label>
    {{ form_row(form.actors) }}

    <label for="">Date de sortie</label>
    {{ form_row(form.release_date) }}

    <label for="">Affiche</label>
    {{ form_row(form.cover, {'attr':{ 'onChange': 'loadFile(event)' } }) }}
    <div class="text-center">
        <img id="image" style="width: 300px">
    </div>

    {{ form_row(form.Valider) }}

    {{ form_end(form) }}


    <script>
    
        var loadFile = function (event) {

            var image = document.getElementById('image');

            image.src = URL.createObjectURL(event.target.files[0]);
            console.log(event.target.files);

        }
    
    </script>

    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/select2.js') }}"></script>

<script>
    $(function(){
    $('.select2').select2()
    });
</script>

{% endblock %}



